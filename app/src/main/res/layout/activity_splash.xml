<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".splash">

    <ImageView
        android:id="@+id/splash_screen"
        android:layout_width="307dp"
        android:layout_height="266dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/doctor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:layout_width="294dp"
        android:layout_height="121dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Welcome To Hospitality"
        android:textAlignment="center"

        android:textColor="#2196F3"
        android:textColorLink="#336893"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/splash_screen"
        app:layout_constraintStart_toStartOf="@+id/splash_screen"
        app:layout_constraintTop_toBottomOf="@+id/splash_screen"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>